{
  "compilerOptions": {
      "target": "es6",
      "module": "esnext",
      "moduleResolution": "node",
      "lib": ["es6"],
      "rootDir": "src",
      "resolveJsonModule": true,
      "esModuleInterop": true,
      "skipLibCheck": false,
      "jsx": "react",
      "downlevelIteration": true,
      "alwaysStrict": true,
      "sourceMap": false,
      "declaration": true,
      "removeComments": false,
      "strict": true,
      "noImplicitReturns": true,
      "noUnusedLocals": true,
      "noImplicitAny": false,
      "noImplicitThis": false,
      "noEmit": true,
      "experimentalDecorators": false,
      "useDefineForClassFields": true
  },
  "include": ["src/**/*.ts"],
  "exclude": [
    "node_modules",
    "**/?(*.)+(spec|test).[tj]s?(x)",
    "**/__tests__/**/**.ts"
  ]
}
