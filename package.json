{
  "name": "node-ts-quick-start",
  "version": "1.0.0",
  "description": "node ts quick start",
  "keywords": [
    "node",
    "ts",
    "typescript",
    "quick start"
  ],
  "main": "dist/index.js",
  "types": "dist/types/index.d.ts",
  "author": "Rain120",
  "files": [
    "dist"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "author": "Rain120",
    "url": "git+https://github.com/Rain120/node-ts-quick-start.git"
  },
  "scripts": {
    "test": "jest --passWithNoTests",
    "coveralls": "cat coverage/lcov.info | coveralls",
    "test:watch": "jest --watch",
    "test:watchAll": "jest --coverage --watchAll",
    "eslint": "eslint --fix --color src/**/**",
    "prettier": "prettier --write  src/**/**",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s -r 0",
    "lint-staged": "lint-staged",
    "typedoc": "typedoc --out docs --target es6 --theme minimal --mode file src",
    "prebuild": "rimraf dist",
    "build": "tsc",
		"dev": "npm run dist -- -w"
  },
  "engines": {
    "node": ">= 10.14.2"
  },
  "lint-staged": {
    "*.{js,md,ts}": [
      "npm run eslint",
      "npm run prettier"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": [
        "lint-staged"
      ],
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "devDependencies": {
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "@types/jest": "^25.2.3",
    "@types/node": "^14.0.11",
    "@typescript-eslint/eslint-plugin": "^3.1.0",
    "@typescript-eslint/parser": "^3.1.0",
    "conventional-changelog-cli": "^2.0.34",
    "coveralls": "^3.1.0",
    "eslint": "^6.8.0",
    "eslint-config-airbnb-base": "^14.1.0",
    "eslint-plugin-import": "^2.20.2",
    "husky": "^4.2.5",
    "jest": "^26.0.1",
    "lint-staged": "^10.2.9",
    "prettier": "^2.0.5",
    "rimraf": "^3.0.2",
    "ts-jest": "^26.1.0",
    "ts-node": "^8.10.2",
    "typedoc": "^0.17.7",
    "typescript": "^3.9.5"
  }
}
